<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="getirhacktathon.getirandroid.RequestCargo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/location_title_label"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="Location Title"
            android:textAppearance="@android:style/TextAppearance.Material.Small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/location_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Title"
                android:textAppearance="@android:style/TextAppearance.Large" />

            <ImageButton
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:onClick="searchPlace"
                app:srcCompat="@drawable/ic_search_black_24dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/location_lat_long_label"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="Location Lat Long"
            android:textAppearance="@android:style/TextAppearance.Material.Small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/location_lat_long"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lat Long"
                android:textAppearance="@android:style/TextAppearance.Large" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
